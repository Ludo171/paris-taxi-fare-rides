{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "google"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "quotes": [
            2,
            "single",
            {
                "avoidEscape": true
            }
        ],
        "max-len": [
            "error",
            150
        ],
        "indent": [
            2,
            2,
            {
                "SwitchCase": 1
            }
        ],
        "object-curly-spacing": [
            2,
            "always"
        ]
    }
}
